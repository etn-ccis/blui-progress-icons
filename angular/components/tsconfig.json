{
    "compileOnSave": false,
    "paths": {
        "core-js/es7/reflect": [
          "../node_modules/core-js/proposals/reflect-metadata"
        ],
        "core-js/es2015/": [
          "./node_modules/core-js/es/"
        ]
      },
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "declaration": false,
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"]
    },
    "include": ["src"]
}
